<?xml version="1.0" ?>

<robot name="generic">

  <!-- Generic Medium Drone (DJI Phantom-like): 2.5kg, balanced performance, stable platform -->
  <properties
    arm="0.175"
    kf="4.5e-8"
    km="7.2e-10"
    thrust2weight="2.04"
    max_speed_kmh="54"
    gnd_eff_coeff="9.8"
    prop_radius="10.16e-2"
    drag_coeff_xy="2.5e-6"
    drag_coeff_z="2.8e-6"
    dw_coeff_1="1200.0"
    dw_coeff_2="0.14"
    dw_coeff_3="-0.09" />

  <link name="base_link">

    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="2.500"/>
      <!-- Scaled inertia for medium-sized platform -->
      <inertia ixx="3.5e-3" ixy="0.0" ixz="0.0" iyy="3.5e-3" iyz="0.0" izz="6.0e-3"/>
    </inertial>

    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <!-- Medium frame (350mm) -->
        <box size="0.35 0.35 0.08"/>
      </geometry>
      <material name="white">
        <color rgba="0.9 0.9 0.9 1"/>
      </material>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.19" length="0.08"/>
      </geometry>
    </collision>

  </link>

  <!-- Motor positions for X-configuration -->
  <link name="prop0_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.124 -0.124 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>
  <joint name="prop0_joint" type="fixed">
    <parent link="base_link"/>
    <child link="prop0_link"/>
  </joint>

  <link name="prop1_link">
    <inertial>
      <origin rpy="0 0 0" xyz="-0.124 -0.124 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>
  <joint name="prop1_joint" type="fixed">
    <parent link="base_link"/>
    <child link="prop1_link"/>
  </joint>

  <link name="prop2_link">
    <inertial>
      <origin rpy="0 0 0" xyz="-0.124 0.124 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>
  <joint name="prop2_joint" type="fixed">
    <parent link="base_link"/>
    <child link="prop2_link"/>
  </joint>

  <link name="prop3_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0.124 0.124 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>
  <joint name="prop3_joint" type="fixed">
    <parent link="base_link"/>
    <child link="prop3_link"/>
  </joint>

  <link name="center_of_mass_link">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>
  <joint name="center_of_mass_joint" type="fixed">
    <parent link="base_link"/>
    <child link="center_of_mass_link"/>
  </joint>

</robot>
